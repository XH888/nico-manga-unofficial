<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_pickup"
        style="@style/Custom.CardView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.xh.study.niconico.widget.RatioImageView
                android:id="@id/img_thumbnail"
                style="@style/CardViewThumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ariv_heightRatio="4"
                app:ariv_widthRatio="9" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/basic_space">

                <com.xh.study.niconico.widget.ExtraTextView
                    android:id="@id/txt_label"
                    style="@style/PickupLabelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/basic_half_space" />

                <TextView
                    android:id="@id/txt_message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff333333"
                    android:textSize="13.0sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>