<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_pickup"
    style="@style/Custom.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.xh.study.niconico.widget.RatioImageView
                android:id="@+id/img_official_thumbnail"
                style="@style/CardViewThumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ariv_heightRatio="744"
                app:ariv_widthRatio="1000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/basic_half_space">

                <com.xh.study.niconico.widget.ExtraTextView
                    android:id="@+id/txt_date"
                    style="@style/DateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/basic_space"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_official_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/paragraph_font_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_official_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"
                android:textSize="@dimen/caption_font_size" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
