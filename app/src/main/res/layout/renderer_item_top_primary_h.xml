<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:id="@+id/card_pickup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Custom.CardView"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <com.xh.study.niconico.widget.RatioImageView
            android:id="@+id/img_thumbnail"
            style="@style/CardViewThumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/basic_space" android:layout_weight="1">

            <com.xh.study.niconico.widget.ExtraTextView
                android:id="@+id/txt_label"
                style="@style/PickupLabelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4.0dip" />

            <TextView
                android:id="@+id/txt_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#ff333333"
                android:textSize="@dimen/paragraph_font_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_author_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4.0dip"
                android:layout_marginTop="4.0dip"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.1"
                android:maxLines="1"
                android:textColor="#ff999999"
                android:textSize="@dimen/caption_font_size"  />
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#ff333333"
                android:textSize="@dimen/paragraph_font_size"
                android:textStyle="bold"  />


        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
</FrameLayout>

